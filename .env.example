# ============================================
# ENVIRONMENT VARIABLES - LSA SCHOOL WEBSITE
# ============================================
# Copy this file to .env.local for development
# Copy this file to .env.production for production

# ============================================
# SUPABASE CONFIGURATION
# ============================================
VITE_SUPABASE_URL=https://your-supabase-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================
# EMAIL SERVICE CONFIGURATION (Optional)
# ============================================
# For SendGrid
VITE_SENDGRID_API_KEY=your-sendgrid-api-key
VITE_SENDGRID_FROM_EMAIL=noreply@school.example.com

# For Mailgun
VITE_MAILGUN_API_KEY=your-mailgun-api-key
VITE_MAILGUN_DOMAIN=mail.school.example.com

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_NAME=ثانوية صلاح الدين الأيوبي
VITE_APP_URL=http://localhost:5173
VITE_API_TIMEOUT=30000

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_REPORTS=true
VITE_ENABLE_DARK_MODE=true

# ============================================
# LOGGING
# ============================================
VITE_LOG_LEVEL=info

# ============================================
# SECURITY
# ============================================
# This should NEVER contain any secrets!
# All secrets must be in backend/server only
VITE_API_RATE_LIMIT=100
